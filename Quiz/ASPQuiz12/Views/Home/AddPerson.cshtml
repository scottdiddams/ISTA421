@model ASPQuiz10.Models.Person
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddPerson</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <h5 class="bg-primary text-white text-center m-2 p-2">Add a person</h5>
    <form asp-action="AddPerson" method="post" class="m-2">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="nameId">Your Name:</label>
            <input asp-for="nameId" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="spouseName">Your Spouse's Name:</label>
            <input asp-for="spouseName" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="dogName">Your Dog's name:</label>
            <input asp-for="dogName" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="catName">Your Cat's name:</label>
            <input asp-for="catName" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</body>
</html>
